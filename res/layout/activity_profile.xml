<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <fragment
        android:id="@+id/ftProfile"
        android:name="com.cire.apps.twitterclient.fragments.ProfileFragement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/ftTweetList"
        android:name="com.cire.apps.twitterclient.fragments.UserTimelineFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ftProfile"
        tools:layout="@layout/fragment_tweets_list" />

</RelativeLayout>